# http://editorconfig.org
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.html]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.xml]
indent_style = tab
tab_width = 4

[*.hx]
indent_style = tab
tab_width = 4

[*.json]
indent_style = tab
tab_width = 4